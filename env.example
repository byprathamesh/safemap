# Safe Map Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
NODE_ENV=development
PORT=3000
APP_NAME=SafeMap
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/safemap
MONGODB_URI=mongodb://localhost:27017/safemap
REDIS_URL=redis://localhost:6379

# Security & Encryption
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key
BLOCKCHAIN_PRIVATE_KEY=your-blockchain-private-key

# Indian Map Services
MAPMY_INDIA_API_KEY=your-mapmy-india-api-key
MAPMY_INDIA_CLIENT_ID=your-mapmy-india-client-id
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Communication Services (Indian Providers)
GUPSHUP_API_KEY=your-gupshup-api-key
GUPSHUP_APP_NAME=your-gupshup-app-name
EXOTEL_API_KEY=your-exotel-api-key
EXOTEL_API_TOKEN=your-exotel-api-token
EXOTEL_SID=your-exotel-sid
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Voice & AI Services
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_PRIVATE_KEY=your-gcp-private-key
GOOGLE_CLOUD_CLIENT_EMAIL=your-gcp-client-email
SPEECH_TO_TEXT_API_KEY=your-speech-api-key

# Cloud Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=safemap-evidence-bucket
GCP_STORAGE_BUCKET=safemap-evidence-bucket

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
FCM_SENDER_ID=your-fcm-sender-id
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# Emergency Services Integration
INDIA_112_API_KEY=your-112-api-key
POLICE_API_ENDPOINT=https://api.police.gov.in/emergency
NGO_WEBHOOK_URL=https://ngo-partner.org/webhook

# Carrier Integration (India)
JIO_API_KEY=your-jio-api-key
AIRTEL_API_KEY=your-airtel-api-key
VI_API_KEY=your-vi-api-key
BSNL_API_KEY=your-bsnl-api-key

# USSD Configuration
USSD_EMERGENCY_CODE=*555#
USSD_SERVICE_CODE=112

# Blockchain Settings
ETHEREUM_NETWORK=mumbai-testnet
ETHEREUM_RPC_URL=https://rpc-mumbai.maticvigil.com
CONTRACT_ADDRESS=your-evidence-contract-address

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_VIDEO_SIZE_MB=50
MAX_AUDIO_SIZE_MB=10
MAX_IMAGE_SIZE_MB=5

# Emergency Response
EMERGENCY_RESPONSE_TIMEOUT=30
AUTO_CALL_DELAY=10
LOCATION_UPDATE_INTERVAL=5

# Compliance
DATA_RETENTION_DAYS=90
GDPR_ENABLED=true
CCPA_ENABLED=false
INDIAN_IT_ACT_COMPLIANCE=true

# Development Only
DEBUG_MODE=false
LOG_LEVEL=info
MOCK_CARRIERS=false
SIMULATE_EMERGENCY=false 