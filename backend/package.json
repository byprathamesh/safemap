{
  "name": "safemap-backend",
  "version": "1.0.0",
  "description": "Safe Map Backend API - Women's Safety Platform",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "setup-db": "npm run db:migrate && npm run db:seed",
    "db:migrate": "npx prisma migrate dev",
    "db:seed": "npx prisma db seed",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "deploy:staging": "npm run build && pm2 start ecosystem.config.js --env staging",
    "deploy:production": "npm run build && pm2 start ecosystem.config.js --env production"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "@prisma/client": "^5.6.0",
    "mongodb": "^6.2.0",
    "ioredis": "^5.3.2",
    "socket.io": "^4.7.4",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "twilio": "^4.19.3",
    "aws-sdk": "^2.1489.0",
    "@google-cloud/speech": "^6.0.1",
    "@google-cloud/translate": "^8.0.2",
    "@google-cloud/storage": "^7.6.0",
    "web3": "^4.2.2",
    "ethers": "^6.8.1",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0",
    "pino": "^8.16.2",
    "express-winston": "^4.2.0",
    "@sentry/node": "^7.81.1",
    "geolib": "^3.3.4",
    "haversine": "^1.1.1",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "crypto": "^1.0.1",
    "node-rsa": "^1.1.1",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "express-validator": "^7.0.1",
    "express-slow-down": "^2.0.1",
    "hpp": "^0.2.3",
    "express-mongo-sanitize": "^2.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.21",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/speakeasy": "^2.0.10",
    "@types/qrcode": "^1.5.5",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "prettier": "^3.1.0",
    "prisma": "^5.6.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 